{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% import 'SyliusUiBundle::buttons.html.twig' as buttons %}
{% import 'SyliusUiBundle::pagination.html.twig' as pagination %}
{% from 'SyliusWebBundle:Backend/Payment:macros.html.twig' import list %}

{% block breadcrumb %}
<ol class="breadcrumb">
    <li>{{ 'sylius.breadcrumb.sales'|trans }}</li>
    <li>{{ 'sylius.breadcrumb.payment.index'|trans }}</li>
</ol>
{% endblock %}

{% block content %}
<div class="page-header">
    <div class="pull-right">
        {{ buttons.create(path('sylius_backend_payment_create'), 'sylius.payment.create'|trans) }}
    </div>
    <h1><i class="fa fa-credit-card"></i> {{ 'sylius.payment.index_header'|trans|raw }}</h1>
</div>

{{ pagination.standard(payments) }}
{{ list(payments) }}
{{ pagination.standard(payments) }}

{% endblock %}
