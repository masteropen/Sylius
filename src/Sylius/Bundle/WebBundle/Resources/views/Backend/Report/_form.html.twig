{% form_theme form 'SyliusWebBundle:Backend/Report:_forms.html.twig' %}

<fieldset>
    <div class="row">
        <div class="col-md-6">
            {{ form_row(form.name) }}
            {{ form_row(form.description) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.renderer) }}
            {% for name, rendererConfigurationPrototype in form.vars.prototypes %}
                <div id="{{ form.renderer.vars.id }}_{{ name }}" data-container=".configuration" data-prototype="{{ form_widget(rendererConfigurationPrototype)|e }}"></div>
            {% endfor %}
            <div class="configuration">
            </div>
        </div>
    </div>
</fieldset>

{{ form_rest(form) }}
