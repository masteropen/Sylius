{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% import 'SyliusUiBundle::buttons.html.twig' as buttons %}
{% import 'SyliusUiBundle::pagination.html.twig' as pagination %}
{% from 'SyliusWebBundle:Backend/Promotion:macros.html.twig' import list %}

{% block breadcrumb %}
<ol class="breadcrumb">
    <li>{{ 'sylius.breadcrumb.sales'|trans }}</li>
    <li>{{ 'sylius.breadcrumb.promotion.index'|trans }}</li>
</ol>
{% endblock %}

{% block content %}
<div class="page-header">
    <div class="actions-menu">
        {{ buttons.create(path('sylius_backend_promotion_create'), 'sylius.promotion.create'|trans) }}
    </div>
    <h1><i class="fa fa-bullhorn"></i> {{ 'sylius.promotion.index_header'|trans|raw }}</h1>
</div>

{{ pagination.standard(promotions) }}
{{ list(promotions) }}
{{ pagination.standard(promotions) }}

{% endblock %}
