{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% import 'SyliusUiBundle::page.html.twig' as page %}
{% from 'SyliusWebBundle:Backend/Order:macros.html.twig' import simple_list as list_orders %}
{% from 'SyliusWebBundle:Backend/User:macros.html.twig' import simple_list as list_users %}

{% block content %}
{{ page.header('dashboard') }}

<div class="row">
    <div class="col-md-6">
        {% include 'SyliusWebBundle:Backend/Dashboard:_quickmenu.html.twig' %}
    </div>
    <div class="col-md-6">
        {% include 'SyliusWebBundle:Backend/Dashboard:_statistics.html.twig' %}
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        {{ list_orders(orders) }}
        <a href="{{ path('sylius_backend_order_index') }}" class="btn btn-primary btn-block"><i class="fa fa-shopping-cart"></i> {{ 'sylius.show_all'|trans }}</a>
    </div>
    <div class="col-md-6">
        {{ list_users(users) }}
        <a href="{{ path('sylius_backend_user_index') }}" class="btn btn-primary btn-block"><i class="fa fa-user"></i> {{ 'sylius.show_all'|trans }}</a>
    </div>
</div>
{% endblock %}
