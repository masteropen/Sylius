{{ order.shipments|length }}

{% for shipment in order.shipments %}
<div class="ui fluid divided stackable items">
    {% set shipment_form = form.shipments[loop.index0] %}
    {% for shipping_method_choice_form in shipment_form.method %}
    <div class="item">
        {{ form_row(shipment_form.shipment_method_choice_form) }}
        <div class="content">
            <a class="header">DHL Express</a>
            <div class="description">
                <p>Fast and cheap shipping for everywhere in the world.</p>
            </div>
        </div>
        <div class="extra">
            <div class="ui right floated label">
                $40.00
            </div>
        </div>
    </div>
    {% endfor %}
</div>
{% endfor %}
