{% set data = grid.data %}
{% set definition = grid.definition %}

{{ sylius_grid_render_filter_form(app.request, grid) }}

<a href="{{ path(definition.applicationName ~'_'~ definition.resourceName ~'_create') }}">{{ 'sylius.ui.add'|trans }}</a>

{% if data|length > 0 %}
    <table>
        <thead>
        <tr>
            <th></th>
            {% for column in definition.columns %}
                <th>{{ sylius_grid_render_header(grid, column) }}</th>
            {% endfor %}
            {% if definition.actions|length > 0 %}
                <th></th>
            {% endif %}
        </tr>
        </thead>
        <tbody>
        {% for resource in data %}
            <tr id="{{ resource.id }}">
                <td><input type="checkbox" /></td>
                {% for column in definition.columns %}
                    <td>{{ sylius_grid_render_value(resource, grid, column) }}</td>
                {% endfor %}
                {% if definition.actions|length > 0 %}
                    <td>
                        {% for action in definition.actions %}
                            {{ sylius_grid_render_action(resource, grid, action) }}
                        {% endfor %}
                    </td>
                {% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}
    {{ 'sylius.ui.no_results'|trans }}
{% endif %}
