{% macro boolean(value) %}
{% if value %}
    <span class="label label-true"><i class="fa-circle"></i> {{ 'sylius.yes'|trans }}</span>
{% else %}
    <span class="label label-false"><i class="fa-circle"></i> {{ 'sylius.no'|trans }}</span>
{% endif %}
{% endmacro %}

{% macro shipment_state(state) %}
{% set label = 'sylius.state.shipment.'~state %}

{% if state == 'pending' %}
    {% set class = 'danger' %}
{% elseif state == 'dispatched' %}
    {% set class = 'info' %}
{% elseif state == 'returned' %}
    {% set class = 'warning' %}
{% else %}
    {% set class = 'success' %}
{% endif %}
<span class="label label-{{ class }} label-state">{{ label|trans }}</span>
{% endmacro %}

{% macro payment_state(state) %}
{% set label = 'sylius.state.payment.'~state %}

{% if state is sameas('completed') %}
    {% set class = 'label-success' %}
{% elseif state in ['checkout', 'processing', 'new'] %}
    {% set class = 'label-primary' %}
{% else %}
    {% set class = 'label-danger' %}
{% endif %}
<span class="label {{ class }}">{{ label|trans }}</span>
{% endmacro %}
