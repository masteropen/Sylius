<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>{% block title %}Sylius{% endblock %}</title>

    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    {% block metatags %}
    {% endblock %}

    {% block stylesheets %}
        {% include 'SyliusUiBundle::_stylesheets.html.twig' %}
    {% endblock %}
</head>

<body>
<div class="ui sidebar vertical inverted menu" id="sidebar">
    <a class="item" href="{{ path('sylius_admin_dashboard') }}"><b>Sylius</b></a>
    {{ knp_menu_render('sylius.admin.main', {'template': 'SyliusUiBundle:Menu:sidebar.html.twig'}) }}
</div>
<div class="pusher">
    <div class="ui fixed inverted menu">
        <a class="icon item" id="sidebar-toggle">
            <i class="sidebar icon"></i>
        </a>
        <div class="ui right floated simple dropdown item">
            <img class="ui avatar image" src="{{ asset('assets/img/avatar.png') }}">
            <span>{{ app.user.customer.fullName }}</span>
            <i class="dropdown icon"></i>
            <div class="menu">
                <a href="{{ path('sylius_admin_logout') }}" class="item">
                    <i class="sign out icon"></i>
                    {{ 'sylius.ui.logout'|trans }}
                </a>
            </div>
        </div>
    </div>
    <div class="full height" id="wrapper">
        <div id="content">
            {% include 'SyliusUiBundle::_flashes.html.twig' %}
            {% block content %}
            {% endblock %}
        </div>
    </div>
</div>

{% include '@SyliusUi/Modal/_confirmation.html.twig' %}

{% block javascripts %}
    {% include 'SyliusUiBundle::_javascripts.html.twig' %}
{% endblock %}
</body>
</html>
