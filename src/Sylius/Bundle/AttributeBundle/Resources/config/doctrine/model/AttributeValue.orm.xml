<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Sylius\Component\Attribute\Model\AttributeValue" table="sylius_attribute_value">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="varchar" column="value_varchar" type="string" nullable="true" />
        <field name="integer" column="value_integer" type="integer" nullable="true" />
        <field name="decimal" column="value_decimal" type="decimal" nullable="true" />
        <field name="boolean" column="value_boolean" type="boolean" nullable="true" />
        <field name="text" column="value_text" type="text" nullable="true" />
        <field name="date" column="value_date" type="date" nullable="true" />
        <field name="datetime" column="value_datetime" type="datetime" nullable="true" />
    </mapped-superclass>

</doctrine-mapping>
