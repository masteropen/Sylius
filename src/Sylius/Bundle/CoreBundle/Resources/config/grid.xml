<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd"
>

    <parameters>
        <parameter key="sylius.grid_filter.taxon.class">Sylius\Component\Core\Grid\Filter\TaxonFilter</parameter>
        <parameter key="sylius.form.type.grid_filter.taxon.class">Sylius\Bundle\CoreBundle\Form\Type\Grid\Filter\TaxonFilterType</parameter>
    </parameters>

    <services>
        <service id="sylius.grid_filter.taxon" class="%sylius.grid_filter.taxon.class%">
            <tag name="sylius.grid_filter" type="taxon" />
        </service>
        <service id="sylius.form.type.grid_filter.taxon" class="%sylius.form.type.grid_filter.taxon.class%">
            <tag name="form.type" alias="sylius_grid_filter_taxon" />
        </service>
    </services>

</container>
